<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hello_World.Vistas.RegistroPage"
             Title="RegistroPage">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Entry x:Name="txtNombre" Placeholder="Nombre completo"/>
            <Entry x:Name="txtCorreo" Placeholder="Correo electrónico" Keyboard="Email"/>
            <Entry x:Name="txtContrasena" Placeholder="Contraseña" IsPassword="True"/>
            <Entry x:Name="txtConfirmarContrasena" Placeholder="Confirmar contraseña" IsPassword="True"/>

            <ActivityIndicator x:Name="loadingIndicator" IsVisible="False" IsRunning="False"/>

            <Button x:Name="btnRegistrar" 
                    Text="Crear cuenta" 
                    Clicked="btnRegistrar_Clicked"
                    BackgroundColor="{StaticResource PrimaryColor}"
                    TextColor="White"/>
        </StackLayout>
    </ScrollView>
</ContentPage>